@model  AssignmentBabyClothes.Models.ShoppingCart

@{
    ViewBag.Title = "My Cart";
    int index = 1;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Back To List Of Product", "Index", "Products")
</p>
<table class="table">
    <tr>
        <th>No.</th>
        <th>
            Name
        </th>
        <th>
            Thumbnail
        </th>
        <th>
            Price
        </th>
        <th>Quantity</th>
        <th>Item Total</th>
        <th>Description</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items.Values)
    {
        <tr>
            <td>@index</td>
            <td>@item.Name</td>
            <td><img src="@item.Thumbnail" style="width: 150px" /> </td>
            <td>@item.Price </td>
            <td> <span>
                @Html.ActionLink(" ", "RemoveOneItem", new { productId = item.ProductId }, new { @class = "glyphicon glyphicon-triangle-left" }) |
            </span> @item.Quantity <span>
                | @Html.ActionLink(" ", "AddToCart", new {productId = item.ProductId, quantity = 1}, new { @class = "glyphicon glyphicon-triangle-right" })
            </span></td>
            <td>@item.TotalItemPrice</td>
            <td>@item.Name</td>
            <td>
                @Html.ActionLink(" ", "RemoveCartItem", new { productId = item.ProductId }, new { @class = "glyphicon glyphicon-trash"})
            </td>
        </tr>
        index++;
    }
</table>
<strong>Total Price: @Model.TotalPrice (VND)</strong>
@Html.ActionLink("Clear Cart", "ClearShoppingCart")